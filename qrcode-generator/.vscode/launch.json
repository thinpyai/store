    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: url-shortener",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--factory",
                "app:main",
                "--host",
                "127.0.0.1",
                "--port",
                " 8080",
                "--log-config",
                "${workspaceFolder}/conf/logging.yml",
                "--reload"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
